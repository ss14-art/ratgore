<controls:FancyWindow xmlns="https://spacestation14.io"
                    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                    xmlns:ui="clr-namespace:Content.Client.Shuttles.UI"
                    Title="drone control console"
                    SetSize="1000 600"
                    MinSize="800 500">
    <GridContainer Columns="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

        <BoxContainer Orientation="Vertical"
                      MinWidth="250"
                      HorizontalExpand="False"
                      Margin="5">
            <controls:StripeBack>
                <Label Text="Linked Drones" FontColorOverride="LightGray" Align="Center"/>
            </controls:StripeBack>
            <ScrollContainer VerticalExpand="True">
                <BoxContainer Name="DroneListContainer" Orientation="Vertical"/>
            </ScrollContainer>

            <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="SelectAllBtn" Text="Select All" Margin="2"/>
                <Button Name="DeselectAllBtn" Text="Clear" Margin="2"/>
            </BoxContainer>
        </BoxContainer>

        <ui:ShuttleNavControl Name="NavRadar"
                              HorizontalExpand="True"
                              VerticalExpand="True"
                              MinHeight="400"/>

    </GridContainer>
</controls:FancyWindow>
